<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/task_download_current"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:layout_centerVertical="true"
        android:id="@+id/iconType"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/task_cancel"
        android:layout_centerVertical="true"
        android:padding="16dp"
        android:id="@+id/iconCancel"
        android:background="?attr/selectableItemBackground"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/iconCancel"
        android:layout_toRightOf="@id/iconType"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="user@cluster"
            android:textColor="@color/inactiveTextColor"
            android:singleLine="true"
            android:id="@+id/textAccount"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Project.pdf"
            android:textColor="@color/secondaryTextColor"
            android:singleLine="true"
            android:id="@+id/textFilename"
            />
        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
            android:progress="20"
            android:id="@+id/progressBar"
            />
        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
            android:progress="20"
            android:id="@+id/progressBarExport"
            android:visibility="gone"
            />
    </LinearLayout>



</RelativeLayout>