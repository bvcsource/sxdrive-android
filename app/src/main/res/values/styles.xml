    <style name="ToolbarTheme" parent="Base.ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:textColorSecondary">@color/primaryTextColor</item>
        <item name="android:colorForeground">@color/primaryTextColor</item>
    </style>
</resources>
